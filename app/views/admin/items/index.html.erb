
<div class="row">
  <div class="col-xs-10 col-xs-offset-1">
      <h2>商品一覧</h2>

  <div class="text-right">
      <%= link_to "新規登録" ,new_admin_item_path, class:"btn btn-lg btn-primary" %>
  </div>

      <!-- ofsetは左右の余白 -->
      <table class="table">
        <thead>
          <tr>
            <th>商品一覧</th>
            <th>商品名</th>
            <th>税抜価格</th>
          </tr>
        </thead>

        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= image_tag item.get_image(100,100) %></td>
              <td><%= item.id %></td>
              <td><%= link_to item.name ,admin_item_path(item) %></td>
              <td><%= item.price.to_s(:delimited, delimiter: ',') %></td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>