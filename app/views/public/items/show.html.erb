
	<div class="col-xs-5">
		<p class="item-content1"></p>
	</div>

	<div class="col-xs-5">

		<h3><%= @item.name %></h3>
		<p><%= @item.introduction %></p>

	</div>

<div class="row">
	<%= form_for(@cart_item , url: cart_items_path, method: :post) do |form| %>
	<div class="col-xs-2">
	</div>
	<div class="col-xs-5">

			<p class="item-content2", style="font-family: arial black">¥ <%= ((@item.price*1.1).floor).to_s(:delimited, delimiter: ',') %> (税込)
				<span>　　</span><%= form.select :amount, [['1個', 1], ['2個', 2], ['3個', 3], ['4個', 4], ['5個', 5], ['6個', 6], ['7個', 7], ['8個', 8], ['9個', 9]], {:prompt => "個数選択"} %></p>
		</div>

		<div class="col-xs-5">
			<%= form.hidden_field :item_id, :value => @item.id %>
		  <p><%= form.submit "カートに入れる", class:"btn btn-primary" %></p>
		</div>
		<% end %>
</div>